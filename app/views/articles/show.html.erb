<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>
<% if @article.image.attached? %>
    <%= image_tag (@article.image) %>
    <% end %>
<%= link_to 'Article List', articles_path %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to "Like (#{@article.likes.count})", article_likes_path(@article), method: :article %>

<%= link_to 'Article List', articles_path %>

<%= render 'rating/form' %>
<%= "Average rating: #{@article.ratings.average(:rating)}" %>
 Ratings Include:
<% @article.ratings.each do | r | %>
<%= r.rating %> <br/>
<% end %>